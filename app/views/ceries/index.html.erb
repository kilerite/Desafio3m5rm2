
<div class="my-3">
  <strong>Filtrar por letra:</strong>
  <a href="<%= ceries_path %>" class="btn btn-primary letter-link">Todas</a>
  <% ('A'..'Z').each do |letter| %>
    <% uppercase_letter = letter.upcase %>
    <%= link_to uppercase_letter, ceries_path(letter: uppercase_letter), class: "btn btn-primary letter-link" %>
  <% end %>
</div>
<h1 class="mt-5 text-center">Series</h1>
<div class="d-flex justify-content-center border p-4 shadow">

  <% if @ceries.empty? %>
    <p>No hay Series por mostrar</p>
  <% else %>
    <ul class="list-group">
      <% @ceries.each do |cerie| %>
        <li class="list-group-item">
          <h3 class="mb-2">Serie <%= cerie.name %></h3>
          <p class="mb-1">Sinopsis <%= cerie.synopsis %></p>
          <p class="mb-1"><strong>Director</strong> <%= cerie.director %></p>
        </li>
      <% end %>
    </ul>
  <% end %>
</div>


